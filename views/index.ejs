        -moz-box-shadow:0 3px 15px #b8c6db;
        -webkit-box-shadow:0 3px 15px #b8c6db;
    }
    .copy-input:focus{
        outline: none;
    }
    .copt-btn{
        width:40px;
        background-color:#aeaeeb;
